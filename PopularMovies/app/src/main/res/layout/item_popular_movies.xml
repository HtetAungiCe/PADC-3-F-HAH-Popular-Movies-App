<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_popular_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_black_panther"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:src="@drawable/blackpanther"

            />

        <TextView

            android:id="@+id/tv_black_panther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_black_panther"
            android:text="Black Panther"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_favorite_red_24dp"
            android:layout_alignLeft="@id/iv_black_panther"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/tv_fav_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.2"
            android:layout_alignLeft="@id/iv_black_panther"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/fullWhite"/>

        <TextView
            android:id="@+id/tv_type"
            style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_black_panther"
            android:layout_below="@id/tv_black_panther"
            android:text="(Adventure,Fantasy,Action,Science Fiction)"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_type"
            android:layout_below="@id/tv_type"
            android:text="Current Popularity"
            android:textColor="@color/colorBlack"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_popular"
            android:layout_below="@id/tv_popular"
            android:src="@drawable/ic_star_yellow_24dp" />

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_popular"
            android:layout_toEndOf="@id/iv_star1"
            android:src="@drawable/ic_star_yellow_24dp"

            />

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_popular"
            android:layout_toEndOf="@id/iv_star2"
            android:src="@drawable/ic_star_yellow_24dp"

            />

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_popular"
            android:layout_toEndOf="@id/iv_star3"
            android:src="@drawable/ic_star_yellow_24dp"

            />

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_popular"
            android:layout_toEndOf="@id/iv_star4"
            android:src="@drawable/ic_star_yellow_24dp"

            />

        <ImageView
            android:id="@+id/iv_star6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_popular"
            android:layout_toEndOf="@id/iv_star5"
            android:src="@drawable/ic_star_yellow_24dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/iv_black_panther"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:background="@color/colorPrimary"
            android:text="More Overview"
            android:textAllCaps="false"
            android:textColor="@color/fullWhite"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crop_free_white_24dp"
            android:layout_alignBottom="@id/iv_black_panther"
            android:layout_alignRight="@id/iv_black_panther"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>